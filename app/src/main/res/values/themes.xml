<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AroundAfrica" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_accent</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/color_secondary</item>
        <item name="colorSecondaryVariant">@color/color_secondary</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>


    <style name="Theme.FullScreen" parent="@style/Theme.AroundAfrica">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="backgroundColor">@color/color_primary</item>
        <item name="android:background">@color/color_primary</item>
        <item name="android:windowBackground">@color/color_primary</item>
    </style>

    <!-- style for material button non-outlines-->
    <style name="MaterialTextButtonRoundedStyle" parent="MaterialTextButtonStyle">
        <item name="android:bottomLeftRadius">@dimen/button_radius</item>
        <item name="android:bottomRightRadius">@dimen/button_radius</item>
        <item name="android:topLeftRadius">@dimen/button_radius</item>
        <item name="android:topRightRadius">@dimen/button_radius</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/button_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/button_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/button_radius</item>
        <item name="cornerRadius">@dimen/button_radius</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
    </style>

    <!-- style for material button non-outlines-->
    <style name="MaterialTextButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:bottomLeftRadius">0dp</item>
        <item name="android:bottomRightRadius">0dp</item>
        <item name="android:topLeftRadius">0dp</item>
        <item name="android:topRightRadius">0dp</item>
        <item name="boxCornerRadiusBottomEnd">0dp</item>
        <item name="boxCornerRadiusBottomStart">0dp</item>
        <item name="boxCornerRadiusTopEnd">0dp</item>
        <item name="cornerRadius">0dp</item>
        <item name="backgroundColor">@color/color_primary</item>
        <item name="backgroundTint">@color/primary_button_states</item>
        <item name="android:textColor">@color/primary_color_states</item>
    </style>

    <!-- style for material button non-outlines-->
    <style name="MaterialIconButtonStyle" parent="Widget.MaterialComponents.Button.Icon">
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:bottomLeftRadius">0dp</item>
        <item name="android:bottomRightRadius">0dp</item>
        <item name="android:topLeftRadius">0dp</item>
        <item name="android:topRightRadius">0dp</item>
        <item name="boxCornerRadiusBottomEnd">0dp</item>
        <item name="boxCornerRadiusBottomStart">0dp</item>
        <item name="boxCornerRadiusTopEnd">0dp</item>
        <item name="cornerRadius">0dp</item>
        <item name="backgroundColor">@color/color_primary</item>
        <item name="backgroundTint">@color/primary_button_states</item>
        <item name="android:textColor">@color/primary_color_states</item>
    </style>

    <style name="MaterialIconOnlyBaseButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="cornerRadius">0dp</item>
        <item name="iconTint">@color/white</item>
        <item name="backgroundColor">@color/color_primary</item>
        <item name="backgroundTint">@color/primary_button_states</item>
        <item name="android:textColor">@color/primary_color_states</item>
    </style>

    <style name="MaterialIconOnlyButtonStyle" parent="MaterialIconOnlyBaseButtonStyle">
        <item name="backgroundColor">@color/black</item>
    </style>

</resources>